{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "ignorePresets": [
    ":ignoreModulesAndTests"
  ],
  "assignees": [
    "Weastie"
  ],
  "terraform": {
    "pinDigests": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.+\\.tf$/"
      ],
      "matchStrings": [
        "#\\s*renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?(?: extractVersion=(?<extractVersion>.*?))?\\s.*?_(?:version|tag)\\s*=\\s*\"(?<currentValue>.*)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.+\\.tf$/"
      ],
      "matchStrings": [
        ".*amiFilter=(?<packageName>.*?)\n(.*currentImageName=(?<currentDigest>.*?)\n)?(.*\n)?.*?(?<depName>[a-zA-Z0-9-_]*)\\s*=\\s*\"(?<currentValue>ami-[a-z0-9]{17})\""
      ],
      "datasourceTemplate": "aws-machine-image",
      "versioningTemplate": "aws-machine-image"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "terraform",
        "terraform-version"
      ],
      "rangeStrategy": "pin",
      "pinDigests": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "separateMinorPatch": true
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "separateMinorPatch": true
    },
    {
      "matchFileNames": [
        "terraform/env/dev/**"
      ],
      "matchDatasources": [
        "docker",
        "aws-machine-image"
      ],
      "commitMessagePrefix": "[dev]",
      "additionalBranchPrefix": "dev-"
    },
    {
      "matchFileNames": [
        "terraform/env/test/**"
      ],
      "matchDatasources": [
        "docker",
        "aws-machine-image"
      ],
      "commitMessagePrefix": "[test]",
      "additionalBranchPrefix": "test-"
    },
    {
      "matchFileNames": [
        "terraform/env/prod/**"
      ],
      "matchDatasources": [
        "docker",
        "aws-machine-image"
      ],
      "commitMessagePrefix": "[prod]",
      "additionalBranchPrefix": "prod-"
    }
  ]
}
